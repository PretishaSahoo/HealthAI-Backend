{
  "version": 2,
  "builds": [
    {
      "src": "index.js",
      "use": "@vercel/node"
    },
    {
      "src": "api/cron.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1",
      "methods": ["POST", "DELETE", "GET", "PUT", "PATCH", "OPTIONS"]
    },
    {
      "src": "/(.*)",
      "dest": "/index.js",
      "methods": ["POST", "DELETE", "GET", "PUT", "PATCH", "OPTIONS"]
    }
  ],
  "crons": [
    {
      "path": "/api/cron",
      "schedule":  "0 0 * * *"
    }
  ]
}
